<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="dialogVm" type="com.simx.dailytest.photos.dialog.DialogPhotoViewModel"/>
    </data>
    <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView android:id="@+id/img"
                   android:padding="2dp"
                   android:layout_centerInParent="true"
                   android:scaleType="centerCrop"
                   bind:image_url="@{dialogVm.image}"
                   android:layout_width="match_parent"
                   android:layout_height="250dp"/>
    </RelativeLayout>
</layout>
